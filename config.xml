<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
		id          = "businesscardextra"
        version     = "1.0.0" >

    <name>Business Card Extra</name>
    <description>My business card Extension</description>
    <author href="https://github.com/pawelrachwal" email="pawel.rachwal.94@gmail.com">
		Paweł Rachwał
	</author>
	<platform name="android" />
    <platform name="android">
        <icon src="res/drawable-ldpi/ic_launcher.png" platform="android" qualifier="ldpi" />
        <icon src="res/drawable-mdpi/ic_launcher.png" platform="android" qualifier="mdpi" />
        <icon src="res/drawable-hdpi/ic_launcher.png" platform="android" qualifier="hdpi" />
        <icon src="res/drawable-xhdpi/ic_launcher.png" platform="android" qualifier="xhdpi" />
        <icon src="res/drawable-xxhdpi/ic_launcher.png" platform="android" qualifier="xxhdpi" />
        <splash src="res/splash/screen-hdpi-portrait.png" density="port-hdpi"/>
        <splash src="res/splash/screen-ldpi-portrait.png" density="port-ldpi"/>
        <splash src="res/splash/screen-mdpi-portrait.png" density="port-mdpi"/>
        <splash src="res/splash/screen-xhdpi-portrait.png" density="port-xhdpi"/>
        <splash src="res/splash/screen-xxhdpi-portrait.png" density="port-xxhdpi"/>
    </platform>


	<plugin name="cordova-plugin-device" spec="~1.1.4" />
	<plugin name="cordova-plugin-dialogs" spec="~1.3.1" />

    <plugin name="cordova-sms-plugin" spec="~0.1.11" />
</widget>